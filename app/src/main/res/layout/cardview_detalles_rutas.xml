            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cliente"
            android:textSize="@dimen/dim_txt_contenido_detalles_entrega"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txt_detalle_ruta_cliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DirecciÃ³n"
            android:textSize="@dimen/dim_txt_contenido_detalles_entrega"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txt_detalle_ruta_direccion"
            android:layout_width="wrap_content"
