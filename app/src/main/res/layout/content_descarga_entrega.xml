<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.acerosocotlan.entregasacerosocotlan.controlador.DescargaEntregaActivity"
    tools:showIn="@layout/activity_descarga_entrega">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5">
            <ImageButton
                android:id="@+id/boton_descarga_camion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:theme="@style/Boton_descargar_camion"
                android:src="@drawable/camiondescargarsinfondo"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5">
            <ImageButton
                android:id="@+id/boton_finalizacion_descarga"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:theme="@style/Boton_finalizar_descarga_camion"
                android:src="@drawable/camionfinalizadosinfondo"/>
        </FrameLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
