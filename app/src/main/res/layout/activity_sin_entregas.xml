<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controlador.SinEntregasActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mr_estil" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entregas Completadas"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ya finalizaste todas tus entregas pendientes ahora solo queda presionar el botÃ³n para finalizar la ruta"
            android:textSize="12sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>
        <Button
            android:id="@+id/btn_terminar_ruta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Terminar ruta"
            android:textStyle="bold"
            android:textColor="@color/texto_blanco"
            android:background="@drawable/boton_redondo"
            android:theme="@style/Boton_finalizar_descarga_camion"
            />
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>