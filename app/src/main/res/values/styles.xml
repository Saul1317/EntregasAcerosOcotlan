<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="CatalogoCamiones" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarRuta" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Boton_enviar_formulario" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColor">@color/icons</item>
    </style>

    <style name="Boton_llegada_camion" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">#ff5252</item>
        <item name="colorControlHighlight">#FFCDD2</item>
    </style>

    <style name="Boton_finalizar_descarga_camion" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">#00C853</item>
        <item name="colorControlHighlight">#C8E6C9</item>
    </style>

    <style name="Boton_descargar_descarga_camion" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">#ffd600</item>
        <item name="colorControlHighlight">#fff59d</item>
    </style>

    <style name="Boton_tomar_foto" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">#F5F5F5</item>
        <item name="colorControlHighlight">#FFFFFF</item>
    </style>

    <style name="pantalla_completa" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogErrorConexion" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowEnterAnimation">@anim/dialog_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_out</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Edit_txt_codigo_seguridad" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/texto_blanco</item>
        <item name="colorControlNormal">@color/texto_blanco</item>
        <item name="colorControlActivated">@color/texto_blanco</item>
        <item name="android:textColorPrimary">@color/texto_blanco</item>
        <item name="android:textColorHint">@color/texto_blanco</item>
    </style>
</resources>
